<?xml version="1.0"?>
<launch>
        <arg name="vehicle_frame" default="cf2" />
        <arg name="vehicle_frame2" default="cf1" />
        <arg name="ip" default="192.168.254.1" />
        <arg name="port" default="3883" />
<!--
============================================================================
Run vrpn client
This connects to the optitrack server and produces pose messages regarding 
the CF.
-->
<node 
    pkg="vrpn_client_ros"
    type="vrpn_client_node" 
    name="vrpn_client_node"
    output="screen"
    respawn="true"
    respawn_delay="3">
        <rosparam subst_value="true">
                server: $(arg ip)
                port: $(arg port)
                update_frequency: 500.0
                frame_id: /world
                child_frame_id: $(arg vehicle_frame2)
                use_server_time: true
                broadcast_tf: false
                refresh_tracker_frequency: 1.0
        </rosparam>
</node>

<!--
============================================================================
-->

<node pkg="rarena" name="arena" type="arena_node.py" 
      output="screen" respawn="true" respawn_delay="5"> 
</node>

</launch>
